<html>
     <body>
         <?php
             function findjson($path = '../data/') {
                 $dir = opendir($path);
                 while(($file = readdir($dir)) !== false) {
					 $ext = pathinfo($file);
					 $ext = strtolower($ext["extension"]);
                     if($file != '.' && $file != '..' && $ext == 'json') {
                         echo $file . '<br>';
                     }
                 }
             }
             
             findjson();
         ?>
     </body>
 </html>
