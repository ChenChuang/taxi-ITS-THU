<?php
	function getfiles($str){
		$dir = opendir($str);
		if($dir != false){
		    while(false !== ($file = readdir ($dir))){
				$ext = strtolower(pathinfo($file)["extension"]);
		        if($ext !== ".json"){
		            //echo . $file . '<br>';
		        }
		    }
		    closedir($dir);
		}
	}
