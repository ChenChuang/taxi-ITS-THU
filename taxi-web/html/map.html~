			$('#clear_btn').click(function(){
				vector_layer.removeAllFeatures();
			});
			$('#restore_btn').click(function(){
				vector_layer.removeAllFeatures();
				plot_track(features_data);
			});
			$('#filename_tx').on('keypress', function (event) {
				if(event.which == '13'){
					//$(this).attr("disabled", "disabled");
					get_track_data($('#filename_tx').val());
				}
		   	});
		})
